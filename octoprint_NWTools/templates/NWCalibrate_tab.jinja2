<script type="text/html" id="calrow-template">
	<th class="calibrate_tool" data-bind="text: name, attr: {title: name}"></th>
	<td class="calibrate_current" data-bind="html: $root.formatFloat(actual()), attr: {title: $root.formatFloat(actual())}"></td>
	<td class="calibrate_target">
	<form class="form-inline" style="margin:0" data-bind="submit: function(element) { $root.setTarget($data, element) }">
			<div class="input-prepend input-append">
				<button type="button" class="btn btn-input-dec" data-bind="click: $root.decrementTarget, enable: $root.isOperational() && $root.loginState.isUser()" title="{{ _('Fine adjust: -.025mm')|edq }}"><i class="fa fa-minus"></i></button>
				<input type="number" min="-999.99" max="999.99" step="0.001" class="input-mini input-nospin" style="width: 60px" data-bind="attr: {placeholder: target()}, value: newTarget, valueUpdate: 'input', enable: $root.isOperational() && $root.loginState.isUser(), event: { focus: function(d, e) {$root.handleFocus(e, 'target', $data) } }">
				<button type="button" class="btn btn-input-inc" data-bind="click: $root.incrementTarget, enable: $root.isOperational() && $root.loginState.isUser()" title="{{ _('Fine adjust: +.025mm')|edq }}"><i class="fa fa-plus"></i></button>
			</div>
			<div class="btn-group">
				<button type="submit" data-bind="enable: $root.isOperational() && $root.loginState.isUser() && $data.newTargetValid()" class="btn btn-primary" title="{{ _('Set')|edq }}"><i class="fa fa-check"></i></button>
			</div>
		</form>
	</td>
	<td class="calibrate_test">
		<button class="btn btn-primary" data-bind="enable: $root.isOperational() && !$root.isPrinting(), visible: $root.showTest($data), click: function(element) { $root.testTarget($data, element) }" style="width:50%">{{ _('Test') }}</button>
	</td>
</script>
